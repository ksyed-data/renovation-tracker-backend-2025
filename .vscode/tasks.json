{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MySQL Service",
            "type": "shell",
            "command": "podman compose up -d mysql",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "isBackground": false,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Stop MySQL Service",
            "type": "shell",
            "command": "podman compose down",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
